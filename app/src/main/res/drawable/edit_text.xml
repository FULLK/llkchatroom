<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <stroke
        android:width="1dp"
        android:color="#9900FF" />

    <!-- 内容区域背景颜色 -->
    <solid android:color="#6600FF" /> <!-- 可以替换为透明或您需要的背景色 -->

    <!-- 圆角半径 -->
    <corners android:radius="100dp" /> <!-- 根据需要调整圆角大小 -->

    <!-- padding，留白区域 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>